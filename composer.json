{
    "name": "bnomei/kirby3-srcset",
    "type": "plugin",
    "version": "1.2.4",
    "license": "MIT",
    "description": "Kirby 3 Plugin for creating image srcset using picture or image element",
    "authors": [
        {
            "name": "Bruno Meilick",
            "email": "b@bnomei.com"
        }
    ],
    "keywords": [
        "kirby3",
        "kirby3-cms",
        "kirby3-plugin",
        "picture-element",
        "srcset",
        "lazy",
        "load",
        "images",
        "lazysizes",
        "source"
    ],
    "suggest": {
    },
    "autoload": {
        "files": [
            "config.php"
        ],
        "psr-4": {
            "Bnomei\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/k-next/kirby"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "getkirby/cms": "^3.0.0-RC-2.0"
    },
    "conflict": {
        "getkirby/kirby": "<3.0"
    },
    "scripts": {
        "zip": [
            "rm kirby3-srcset.zip",
            "composer install --no-dev",
            "composer remove getkirby/cms",
            "composer dumpautoload -o",
            "zip -r kirby3-srcset.zip . -x *.git*",
            "composer require getkirby/cms:'^3.0.0-RC-2.0'"
        ]
    }
}
